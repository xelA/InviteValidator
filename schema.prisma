datasource db {
  provider = "sqlite"
  url      = "file:./storage.db"
}

model whitelist {
  guild_id   BigInt   @id @unique
  user_id    BigInt
  invited    Boolean  @default(false)
  created_at DateTime @default(now())
}

model blacklist {
  guild_id   BigInt    @id @unique
  user_id    BigInt
  reason     String
  expires_at DateTime?
  created_at DateTime  @default(now())
}

model notes {
  id         Int      @id @default(autoincrement())
  user_id    BigInt
  guild_id   BigInt
  content    String
  created_at DateTime @default(now())
}
